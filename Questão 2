//Autor Paola Chu.
//Algoritmo em C++ que executa um programa que calcula o somatório dos 15 primeiros termos da sequencia numérica S. 

#include <iostream>
#include <locale.h>

using namespace std;

int main() {
	
	setlocale (LC_ALL, "Portuguese");
	
    
    double soma = 0;
    
   

    for (int i = 0; i < 15; i++) {
        double termo = (100 - 2*i) / (double)(i+1);
        soma += termo;
        cout << "Termo " << i+1 << ": " << termo << endl;
    }

   
    cout << "Soma dos termos: " << soma << endl;

    return 0;
}
